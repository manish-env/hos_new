{% comment %}
  Section Title Component
  Features: White horizontal band with centered text, decorative red dots and lines
  Usage: {% render 'section-title', title: 'YOUR TITLE HERE' %}
{% endcomment %}

{%- style -%}
  .section-title-{{ section.id }} {
    --title-text-color: #ff4aa2;
    --title-bg-color: #fff;
    --title-border-color: #000;
    --decorative-dot-color: #ff0000;
    --decorative-line-color: #ff0000;
  }
  
  .section-title-{{ section.id }} .section-title__container {
    background: var(--title-bg-color);
    padding: 20px 0;
    text-align: center;
    position: relative;
    margin: 40px 0;
  }
  
  .section-title-{{ section.id }} .section-title__text {
    color: var(--title-text-color);
    font-size: 24px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0;
    position: relative;
    z-index: 2;
  }
  
  .section-title-{{ section.id }} .section-title__decorative-line {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    height: 2px;
    background: var(--decorative-line-color);
    width: 60px;
  }
  
  .section-title-{{ section.id }} .section-title__decorative-line--left {
    left: 20%;
  }
  
  .section-title-{{ section.id }} .section-title__decorative-line--right {
    right: 20%;
  }
  
  .section-title-{{ section.id }} .section-title__decorative-dot {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 8px;
    height: 8px;
    background: var(--decorative-dot-color);
    border-radius: 50%;
  }
  
  .section-title-{{ section.id }} .section-title__decorative-dot--left {
    left: calc(20% + 60px);
  }
  
  .section-title-{{ section.id }} .section-title__decorative-dot--right {
    right: calc(20% + 60px);
  }
  
  .section-title-{{ section.id }} .section-title__decorative-dot--above-p {
    top: calc(50% - 30px);
    left: 50%;
    transform: translateX(-50%);
  }
  
  .section-title-{{ section.id }} .section-title__decorative-dot--above-n {
    top: calc(50% - 30px);
    right: 50%;
    transform: translateX(50%);
  }
  
  @media (max-width: 768px) {
    .section-title-{{ section.id }} .section-title__text {
      font-size: 20px;
    }
    
    .section-title-{{ section.id }} .section-title__decorative-line {
      width: 40px;
    }
    
    .section-title-{{ section.id }} .section-title__decorative-line--left {
      left: 15%;
    }
    
    .section-title-{{ section.id }} .section-title__decorative-line--right {
      right: 15%;
    }
    
    .section-title-{{ section.id }} .section-title__decorative-dot--left {
      left: calc(15% + 40px);
    }
    
    .section-title-{{ section.id }} .section-title__decorative-dot--right {
      right: calc(15% + 40px);
    }
  }
  
  @media (max-width: 480px) {
    .section-title-{{ section.id }} .section-title__text {
      font-size: 18px;
    }
    
    .section-title-{{ section.id }} .section-title__decorative-line {
      width: 30px;
    }
    
    .section-title-{{ section.id }} .section-title__decorative-line--left {
      left: 10%;
    }
    
    .section-title-{{ section.id }} .section-title__decorative-line--right {
      right: 10%;
    }
    
    .section-title-{{ section.id }} .section-title__decorative-dot--left {
      left: calc(10% + 30px);
    }
    
    .section-title-{{ section.id }} .section-title__decorative-dot--right {
      right: calc(10% + 30px);
    }
  }
{%- endstyle -%}

<div class="section-title-{{ section.id }}">
  <div class="section-title__container">
    <!-- Decorative line left -->
    <div class="section-title__decorative-line section-title__decorative-line--left"></div>
    
    <!-- Decorative line right -->
    <div class="section-title__decorative-line section-title__decorative-line--right"></div>
    
    <!-- Decorative dot left -->
    <div class="section-title__decorative-dot section-title__decorative-dot--left"></div>
    
    <!-- Decorative dot right -->
    <div class="section-title__decorative-dot section-title__decorative-dot--right"></div>
    
    <!-- Decorative dot above P -->
    <div class="section-title__decorative-dot section-title__decorative-dot--above-p"></div>
    
    <!-- Decorative dot above N -->
    <div class="section-title__decorative-dot section-title__decorative-dot--above-n"></div>
    
    <!-- Main title text -->
    <h2 class="section-title__text">{{ title | default: 'SECTION TITLE' }}</h2>
  </div>
</div>
