{% comment %}
  Floating WhatsApp Button
  
  Usage:
  {% render 'floating-whatsapp', phone_number: '1234567890', message: 'Hello, I have a question about...' %}
  
  Parameters:
  - phone_number: WhatsApp phone number with country code (required)
  - message: Pre-filled message (optional)
{% endcomment %}

{%- style -%}
  {{ 'component-floating-whatsapp.css' | asset_url | stylesheet_tag }}
{%- endstyle -%}

<script src="{{ 'floating-whatsapp.js' | asset_url }}" defer="defer"></script>

<floating-whatsapp 
  phone-number="{{ phone_number | default: '911234567890' }}" 
  message="{{ message | default: 'Hello, I would like to know more about your products.' }}">
</floating-whatsapp>
