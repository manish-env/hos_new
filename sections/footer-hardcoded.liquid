{% comment %}
Hardcoded Footer (HOS) — static HTML, no settings/blocks
{% endcomment %}

{%- style -%}
  .hos-footer-hardcoded { background: #f5f5f5; color: #333; border-top: 1px solid #e0e0e0; }
  .hos-footer-hardcoded .page-width { max-width: var(--page-width, 1200px); margin: 0 auto; padding: 40px 20px 30px; }
  .hos-footer-top { display: grid; grid-template-columns: auto 1fr auto; align-items: center; gap: 40px; padding-bottom: 40px; }
  .hos-footer-top .social { display: flex; align-items: center; gap: 20px; }
  .hos-footer-top .social a { color: #333; text-decoration: none; font-size: 24px; }
  .hos-footer-top .social a:hover { color: #666; }
  .hos-footer-top .badges { justify-self: center; display: flex; gap: 80px; align-items: center; flex-wrap: wrap; }
  .hos-footer-top .badge { display: flex; flex-direction: column; align-items: center; gap: 8px; min-width: 120px; }
  .hos-footer-top .badge i { font-size: 32px; color: #333; margin-bottom: 4px; }
  .hos-footer-top .badge .label { font-size: 11px; font-weight: 600; text-transform: uppercase; letter-spacing: 0.8px; text-align: center; color: #666; line-height: 1.2; }
  .hos-footer-top .newsletter .field { display: flex; gap: 0; }
  .hos-footer-top .newsletter input[type="email"] { height: 40px; padding: 0 15px; border: 1px solid #ccc; background: #fff; color: #333; min-width: 200px; border-radius: 0; font-size: 14px; }
  .hos-footer-top .newsletter input::placeholder { color: #999; }
  .hos-footer-top .newsletter button { height: 40px; padding: 0 20px; border: 1px solid #333; background: #333; color: #fff; text-transform: uppercase; font-weight: 600; letter-spacing: 0.5px; border-radius: 0; font-size: 12px; }
  .hos-footer-divider { height: 1px; background: #e0e0e0; margin: 0 0 30px 0; }
  .hos-footer-bottom { display: grid; grid-template-columns: repeat(5, 1fr); gap: 40px; }
  .hos-footer-bottom h4 { font-size: 13px; letter-spacing: 0.8px; text-transform: uppercase; margin: 0 0 15px 0; color: #333; font-weight: 600; }
  .hos-footer-bottom .links { display: flex; flex-direction: column; gap: 10px; }
  .hos-footer-bottom .links a { color: #666; text-decoration: none; font-size: 13px; line-height: 1.4; }
  .hos-footer-bottom .links a:hover { color: #333; }
  .hos-footer-bottom .rte { color: #666; font-size: 12px; line-height: 1.5; }
  .hos-footer-bottom .rte p { margin: 0; }
  @media (max-width: 989px){ .hos-footer-top{ grid-template-columns: 1fr 1fr; gap: 30px; } .hos-footer-top .badges{ grid-column: 1/3; order: 2; justify-self: center; gap: 50px; margin-top: 20px; } .hos-footer-top .newsletter{ justify-self: end; } .hos-footer-bottom{ gap: 30px; } }
  @media (max-width: 749px){ .hos-footer-top{ grid-template-columns: 1fr; row-gap: 20px; text-align: center; } .hos-footer-top .social{ justify-content: center; } .hos-footer-top .newsletter{ justify-self: center; } .hos-footer-top .newsletter input[type="email"]{ min-width: 180px; } .hos-footer-bottom{ grid-template-columns: 1fr 1fr; gap: 25px; } }
{%- endstyle -%}

