{% comment %}
Hardcoded Footer (HOS) — static HTML, no settings/blocks
{% endcomment %}

{%- style -%}
  .hos-footer-hardcoded { 
    background: rgb(var(--color-background)); 
    color: rgba(var(--color-foreground), 0.75); 
    border-top: 0.1rem solid rgba(var(--color-foreground), 0.08); 
  }
  .hos-footer-top { 
    display: grid; 
    grid-template-columns: auto 1fr auto; 
    align-items: center; 
    gap: 3rem; 
    padding: 3rem 0 2.5rem; 
  }
  .hos-footer-top .social { 
    display: flex; 
    align-items: center; 
    gap: 1.5rem; 
  }
  .hos-footer-top .social a { 
    color: rgba(var(--color-foreground), 0.75); 
    text-decoration: none; 
    font-size: 1.8rem; 
    transition: color 0.15s ease;
  }
  .hos-footer-top .social a:hover { 
    color: rgb(var(--color-foreground)); 
  }
  .hos-footer-top .badges { 
    justify-self: center; 
    display: flex; 
    gap: 6rem; 
    align-items: center; 
    flex-wrap: wrap; 
  }
  .hos-footer-top .badge { 
    display: flex; 
    flex-direction: column; 
    align-items: center; 
    gap: 0.8rem; 
    min-width: 10rem; 
  }
  .hos-footer-top .badge i { 
    font-size: 2.4rem; 
    color: rgba(var(--color-foreground), 0.75); 
    margin-bottom: 0.2rem; 
  }
  .hos-footer-top .badge .label { 
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);
    font-size: 1rem; 
    text-transform: uppercase; 
    letter-spacing: 0.07rem; 
    text-align: center; 
    color: rgba(var(--color-foreground), 0.7); 
    line-height: 1.2; 
  }
  .hos-footer-top .newsletter .field { 
    display: flex; 
    gap: 0; 
  }
  .hos-footer-top .newsletter input[type="email"] { 
    font-family: var(--font-body-family);
    height: 4rem; 
    padding: 0 1.5rem; 
    border: 0.1rem solid rgba(var(--color-foreground), 0.2); 
    background: rgb(var(--color-background)); 
    color: rgba(var(--color-foreground), 0.75); 
    min-width: 20rem; 
    border-radius: 0; 
    font-size: 1.4rem; 
  }
  .hos-footer-top .newsletter input::placeholder { 
    color: rgba(var(--color-foreground), 0.55); 
  }
  .hos-footer-top .newsletter button { 
    font-family: var(--font-heading-family);
    font-weight: var(--font-heading-weight);
    height: 4rem; 
    padding: 0 2rem; 
    border: 0.1rem solid rgb(var(--color-button)); 
    background: rgb(var(--color-button)); 
    color: rgb(var(--color-button-text)); 
    text-transform: uppercase; 
    letter-spacing: 0.07rem; 
    border-radius: 0; 
    font-size: 1.2rem; 
    cursor: pointer;
    transition: all 0.15s ease;
  }
  .hos-footer-top .newsletter button:hover {
    background: rgba(var(--color-button), 0.8);
  }
  .hos-footer-divider { 
    height: 0.1rem; 
    background: rgba(var(--color-foreground), 0.08); 
    margin: 0 0 3rem 0; 
  }
  .hos-footer-bottom { 
    display: grid; 
    grid-template-columns: repeat(5, 1fr); 
    gap: 4rem; 
    padding-bottom: 2rem;
  }
  .hos-footer-bottom h4 { 
    font-family: var(--font-heading-family);
    font-style: var(--font-heading-style);
    font-weight: var(--font-heading-weight);
    font-size: 1.2rem; 
    letter-spacing: 0.07rem; 
    text-transform: uppercase; 
    margin: 0 0 1.5rem 0; 
    color: rgb(var(--color-foreground)); 
  }
  .hos-footer-bottom .links { 
    display: flex; 
    flex-direction: column; 
    gap: 1rem; 
  }
  .hos-footer-bottom .links a { 
    font-family: var(--font-body-family);
    color: rgba(var(--color-foreground), 0.7); 
    text-decoration: none; 
    font-size: 1.4rem; 
    line-height: 1.4; 
    transition: color 0.15s ease;
  }
  .hos-footer-bottom .links a:hover { 
    color: rgb(var(--color-foreground)); 
  }
  .hos-footer-bottom .rte { 
    font-family: var(--font-body-family);
    color: rgba(var(--color-foreground), 0.7); 
    font-size: 1.2rem; 
    line-height: 1.5; 
  }
  .hos-footer-bottom .rte p { 
    margin: 0 0 0.5rem 0; 
  }
  @media screen and (max-width: 989px) { 
    .hos-footer-top { 
      grid-template-columns: 1fr 1fr; 
      gap: 2rem; 
    } 
    .hos-footer-top .badges { 
      grid-column: 1/3; 
      order: 2; 
      justify-self: center; 
      gap: 4rem; 
      margin-top: 2rem; 
    } 
    .hos-footer-top .newsletter { 
      justify-self: end; 
    } 
    .hos-footer-bottom { 
      gap: 3rem; 
    } 
  }
  @media screen and (max-width: 749px) { 
    .hos-footer-top { 
      grid-template-columns: 1fr; 
      row-gap: 2rem; 
      text-align: center; 
      padding: 2rem 0; 
    } 
    .hos-footer-top .social { 
      justify-content: center; 
    } 
    .hos-footer-top .newsletter { 
      justify-self: center; 
    } 
    .hos-footer-top .newsletter input[type="email"] { 
      min-width: 18rem; 
    } 
    .hos-footer-bottom { 
      grid-template-columns: 1fr 1fr; 
      gap: 2rem; 
    } 
    .hos-footer-divider {
      margin: 0 0 2rem 0;
    }
  }
{%- endstyle -%}

