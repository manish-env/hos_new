{% comment %}
Hardcoded Footer (HOS) — static HTML, no settings/blocks
{% endcomment %}

{%- style -%}
  .hos-footer-hardcoded { background: rgb(var(--color-background)); color: rgb(var(--color-foreground)); border-top: 1px solid rgba(var(--color-foreground), .12); }
  .hos-footer-hardcoded .page-width { max-width: var(--page-width, 1200px); margin: 0 auto; padding: 24px 16px; }
  .hos-footer-top { display: grid; grid-template-columns: auto 1fr auto; align-items: center; gap: 24px; padding-bottom: 18px; }
  .hos-footer-top .badges { justify-self: center; display: flex; gap: 28px; align-items: center; flex-wrap: wrap; }
  .hos-footer-top .badge { display: grid; grid-template-columns: 32px auto; gap: 10px; align-items: center; }
  .hos-footer-top .badge i { font-size: 22px; width: 32px; height: 32px; display: inline-flex; align-items: center; justify-content: center; }
  .hos-footer-divider { height: 1px; background: rgba(var(--color-foreground), .12); }
  .hos-footer-bottom { display: grid; grid-template-columns: repeat(5, 1fr); gap: 24px; padding-top: 20px; }
  .hos-footer-bottom h4 { font-size: 14px; letter-spacing: .06em; text-transform: uppercase; margin: 0 0 10px 0; }
  .hos-footer-bottom .links { display: flex; flex-direction: column; gap: 8px; }
  .hos-footer-bottom .links a { color: rgb(var(--color-foreground)); text-decoration: none; font-size: 14px; }
  .hos-footer-bottom .links a:hover { text-decoration: underline; }
  @media (max-width: 989px){ .hos-footer-top{ grid-template-columns: 1fr 1fr; } .hos-footer-top .badges{ grid-column: 1/3; order:2; justify-self: center; } }
  @media (max-width: 749px){ .hos-footer-top{ grid-template-columns: 1fr; row-gap: 12px; } .hos-footer-bottom{ grid-template-columns: 1fr 1fr; gap: 18px; } }
{%- endstyle -%}

<footer class="hos-footer-hardcoded">
  <div class="page-width">
    <div class="hos-footer-top">
      <div class="social">
        {%- render 'social-icons', class: 'footer__list-social' -%}
      </div>
      <div class="badges">
        <div class="badge">
          <i class="fa-solid fa-truck-fast" aria-hidden="true"></i>
          <div>
            <div style="font-size:12px;opacity:.7;text-transform:uppercase;letter-spacing:.06em;">Track Order</div>
            <div style="font-weight:600;">Fast Shipping</div>
          </div>
        </div>
        <div class="badge">
          <i class="fa-solid fa-globe" aria-hidden="true"></i>
          <div>
            <div style="font-size:12px;opacity:.7;text-transform:uppercase;letter-spacing:.06em;">International</div>
            <div style="font-weight:600;">Delivery</div>
          </div>
        </div>
        <div class="badge">
          <i class="fa-solid fa-scissors" aria-hidden="true"></i>
          <div>
            <div style="font-size:12px;opacity:.7;text-transform:uppercase;letter-spacing:.06em;">Boutique Style</div>
            <div style="font-weight:600;">Stitching</div>
          </div>
        </div>
      </div>
      <div class="newsletter">
        {%- form 'customer', id: 'HOSFooterNewsletterStatic', class: 'newsletter-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="field" style="display:flex; gap:8px; width:100%">
