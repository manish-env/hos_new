{% comment %}
Hardcoded Footer (HOS) — static HTML, no settings/blocks
{% endcomment %}

{%- style -%}
  .hos-footer-hardcoded { background: #f2f2f2; color: #222; border-top: 1px solid #d9d9d9; }
  .hos-footer-hardcoded .page-width { max-width: var(--page-width, 1200px); margin: 0 auto; padding: 22px 16px; }
  .hos-footer-top { display: grid; grid-template-columns: auto 1fr auto; align-items: center; gap: 32px; padding: 8px 0 14px; }
  .hos-footer-top .social { display: flex; align-items: center; gap: 18px; }
  .hos-footer-top .social a { color: #222; text-decoration: none; }
  .hos-footer-top .social i { font-size: 20px; }
  .hos-footer-top .badges { justify-self: center; display: flex; gap: 72px; align-items: center; flex-wrap: wrap; }
  .hos-footer-top .badge { display: flex; flex-direction: column; align-items: center; gap: 8px; min-width: 140px; }
  .hos-footer-top .badge i { font-size: 26px; width: 36px; height: 36px; display: inline-flex; align-items: center; justify-content: center; }
  .hos-footer-top .badge .label, .hos-footer-top .badge .title { font-size: 12px; opacity: .9; text-transform: uppercase; letter-spacing: .06em; text-align: center; }
  .hos-footer-top .newsletter .field { display: flex; gap: 0; }
  .hos-footer-top .newsletter input[type="email"] { height: 34px; padding: 0 12px; border: 1px solid #222; background: #fff; color: #222; min-width: 260px; border-radius: 0; }
  .hos-footer-top .newsletter input::placeholder { color: #666; }
  .hos-footer-top .newsletter button { height: 34px; padding: 0 14px; border: 1px solid #111; background: #111; color: #fff; text-transform: uppercase; font-weight: 600; letter-spacing: .02em; border-radius: 0; }
  .hos-footer-divider { height: 1px; background: #d9d9d9; }
  .hos-footer-bottom { display: grid; grid-template-columns: repeat(5, 1fr); gap: 28px; padding-top: 18px; }
  .hos-footer-bottom h4 { font-size: 14px; letter-spacing: .06em; text-transform: uppercase; margin: 0 0 10px 0; color: #222; }
  .hos-footer-bottom .links { display: flex; flex-direction: column; gap: 8px; }
  .hos-footer-bottom .links a { color: #222; text-decoration: none; font-size: 14px; }
  .hos-footer-bottom .links a:hover { text-decoration: underline; }
  .hos-footer-bottom .rte { color: #222; font-size: 14px; }
  @media (max-width: 989px){ .hos-footer-top{ grid-template-columns: 1fr 1fr; } .hos-footer-top .badges{ grid-column: 1/3; order:2; justify-self: center; gap: 32px; } .hos-footer-top .newsletter{ justify-self: end; } }
  @media (max-width: 749px){ .hos-footer-top{ grid-template-columns: 1fr; row-gap: 14px; } .hos-footer-bottom{ grid-template-columns: 1fr 1fr; gap: 18px; } .hos-footer-top .newsletter input[type="email"]{ min-width: 0; width: 100%; } }
{%- endstyle -%}

